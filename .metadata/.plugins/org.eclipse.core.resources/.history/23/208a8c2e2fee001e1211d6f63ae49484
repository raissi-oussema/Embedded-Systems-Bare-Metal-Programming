/* Define all needed address BusReg to toggle a led attached pin5 on port B with proteus 8*/
#include 			"stm32f401xc.h"
#include 			"adc.h"
#include            <stdio.h>
#include 			"uart.h"

int value;
void main(void)
{
	uart2_rxtx_init();

	pa1_adc_init();
	
	while (1){
		start_conversion();
		value = adc_read();
		printf("The value detected is ", value);
		uart2_write(value);
	}
}
